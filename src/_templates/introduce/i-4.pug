section.Introduce
	.container
		.introduce__wrapper.t-4.container-1175px
			h2 HỆ THỐNG PHÂN PHỐI
			.introduce__inner
				.intro__map
					.map#map
				.dealer-locator-list
					.list
				.introMap__search
					.introMap__form
						.introMap__input
							input#location-search(type="text" placeholder="Tìm địa chỉ . . .")
						.introMap__input.select
							select(name="country")
								option(value="1") Việt Nam
						.introMap__input.select
							select(name="city")
								option(value="1") Tp. Hồ Chí Minh
						.introMap__input.select
							select(name="district")
								option(value="1") Chọn Quận/Huyện
					.introMap__list
						ul
							-for(var i = 0; i<5;i++)
								li.introMap__item
									h6 Lorem ipsum dolor sit amet.
									.item__info
										.info__icon
											img(src="./assets/images/intro/home.png", alt="home")
										.info__text.location
											p Lầu 8, Tòa nhà SAMCO, 32#{i} Võ Văn Kiệt, Phường Cô Giang, Quận 1, TP.HCM.
									.item__info
										.info__icon
											img(src="./assets/images/intro/phone.png", alt="phone")
										.info__text
											p (08) 2365 1254 - (08) 6582 3254